<% include ./partials/header %>

    <section class="container">
        <div class="row" id="suggestions">
            <h3>Results for "<%= query.toUpperCase() %>"</h3>
            <div class="owl-carousel">
                <% for(var i = 0; i < data.length; i++) { %>
                    <% if(data[i].cover !== undefined) { %>
                        <div class="card">
                            <div class="crop item">
                                <a href="/results/<%= data[i].id %>">
                                    <img src="<%= images[i] %>">
                                    <div class="overlay">
                                        <h3 class="overlay-text">Read more</h3>
                                    </div>
                                </a>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><%= data[i].name %></p>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </section>






