<% include ./partials/header %>

    <section class="container">
        <div class="row" id="results">
            <h3 class="search-result">Results for: <%= query %></h3>
            <div class="owl-carousel">
                <% for(var i = 0; i < data.length; i++) { %>
                    <% if(data[i].cover !== undefined) { %>
                        <div class="card">
                            <div class="crop item">
                                <a href="/results/<%= data[i].id %>">
                                    <img src="<%= images[i] %>">
                                    <div class="overlay">
                                        <h3 class="overlay-text">Read more</h3>
                                    </div>
                                </a>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><%= data[i].name %></p>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </section>

    <section class="container">
        <h3 class="search-result">Results for: <%= query %></h3>
        <div class="row" id="results-2">
            <% for(var i = 0; i < data.length; i++) { %>
                <% if(data[i].cover !== undefined) { %>
                    <div class="col-sm-6 col-md-3">
                         <div class="card card-test">
                            <div class="crop item">
                                <a href="/results/<%= data[i].id %>">
                                    <img src="<%= images[i] %>" class="img-test">
                                    <div class="overlay">
                                        <h3 class="overlay-text">Read more</h3>
                                    </div>
                                </a>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><%= data[i].name %></p>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </section>


<% include ./partials/footer %>